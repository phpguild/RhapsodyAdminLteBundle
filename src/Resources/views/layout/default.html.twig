{% extends '@Rhapsody/layout/default.html.twig' %}

{% block body %}
    <div class="wrapper">
        {% block navbar %}
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                    </li>
                </ul>
            </nav>
        {% endblock %}

        {% block sidebar %}
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/" class="brand-link">
                <span class="brand-text font-weight-light">{{ project.name }}</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">
                        <a href="#" class="d-block">{{ app.user }}</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        {% block sidebar_links %}
                            <li class="nav-item">
                                <a href="{{ path('frontend_dashboard') }}" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>{{ 'ui.dashboard'|trans }}</p>
                                </a>
                            </li>
                        {% endblock %}
                    </ul>
                </nav>
            </div>
        </aside>
        {% endblock %}

        {% block content_wrapper %}
            <div class="content-wrapper">
                <section class="content-header">
                    <div class="container-fluid">
                        {% block content_header %}
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <h1>{% block content_title %}{% endblock %}</h1>
                                </div>
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right">
                                        {% block breadcrumb %}
                                            <li class="breadcrumb-item"><a href="#">{{ 'ui.dashboard'|trans }}</a></li>
                                        {% endblock %}
                                    </ol>
                                </div>
                            </div>
                        {% endblock %}
                    </div>
                </section>
                <section class="content">
                    {% block content %}{% endblock %}
                </section>
            </div>
        {% endblock %}

        {% block footer %}
            <footer class="main-footer">
                <div class="float-right d-none d-sm-block"><b>Version</b> {{ project.version }}</div>
                <strong>Copyright &copy; {{ 'now'|date('Y') }} {{ project.name }}.</strong>
            </footer>
        {% endblock %}
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('dist/css/fontawesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dist/css/adminlte.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script defer src="{{ asset('dist/js/jquery.min.js') }}"></script>
    <script defer src="{{ asset('dist/js/adminlte.min.js') }}"></script>
{% endblock %}